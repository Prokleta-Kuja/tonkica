<div class="mb-3">
    <label for="@For" class="form-label">@Label @(Required ? "*":"")</label>
    @if (Lines == 1)
    {
        <input class="form-control @(_isError ? "is-invalid":"")" id="@For" placeholder=@PlaceHolder @bind=@Value
            @onblur=Update required=@Required>
    }
    else
    {
        <textarea class="form-control @(_isError ? "is-invalid":"")" id="@For" placeholder=@PlaceHolder @bind=@Value
            @onblur=Update required=@Required rows=@Lines></textarea>
    }
    @if (_isError)
    {
        <div class="invalid-feedback">
            @Errors![For]
        </div>
    }
</div>

@code{
    private bool _isError => Errors != null && Errors.ContainsKey(For);
    [Parameter] public string For { get; set; } = null!;
    [Parameter] public string Label { get; set; } = null!;
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public int Lines { get; set; } = 1;
    [Parameter] public string? PlaceHolder { get; set; }
    [Parameter]
    public Dictionary<string, string>? Errors { get; set; }
    private async Task Update()
    {
        if (_isError)
            Errors!.Remove(For);

        if (!ValueChanged.HasDelegate)
            return;

        if (string.IsNullOrWhiteSpace(Value))
            await ValueChanged.InvokeAsync(null);

        await ValueChanged.InvokeAsync(Value);
    }
}