{
  "name": "tonkica-api",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir dist",
    "check": "tsc -p tsconfig.json --noEmit",
    "dev": "tsx watch --tsconfig tsconfig.json ./src/main.ts",
    "migration": "drizzle-kit generate:pg --schema ./src/db/schemas/index.ts --out ./src/db/migrations",
    "push": "drizzle-kit push:pg --driver pg --schema ./src/db/schemas/index.ts --connectionString 'postgres://postgres:postgres@db:5432/tonkica' --verbose"
  },
  "devDependencies": {
    "@fastify/http-proxy": "9.4.0",
    "@types/node": "20.11.19",
    "drizzle-kit": "0.20.14",
    "tsx": "4.7.1",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@fastify/static": "7.0.1",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "3.0.0",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.29.3",
    "drizzle-zod": "0.5.1",
    "fastify": "4.26.1",
    "fastify-zod-openapi": "1.1.0",
    "postgres": "3.4.3",
    "zod": "3.22.4",
    "zod-openapi": "2.13.0"
  }
}