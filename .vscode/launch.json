{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "API",
            "cwd": "${workspaceRoot}/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "env": {
                "IS_DEVELOPMENT": "true"
            },
            "envFile": "${workspaceFolder}/api/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "WEB",
            "cwd": "${workspaceRoot}/web",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}